{{log "ember - app/templates/vacation/edit.hbs"}}
<div class="modal" id="updateVacationModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Edit Vacation</h4>
      </div>
      <div class="modal-body">


        <form {{action "update"  on="submit"}} class="form-horizontal col-xs-12 col-sm-12 col-md-12  col-lg-12">

          <div class="form-group"><label class="control-label col-xs-3 col-sm-3 col-md-3  col-lg-3">Name</label>
            <div class="col-xs-7 col-sm-7 col-md-7  col-lg-7">
              {{input value=model.name type="text" id="name" class="form-control" required="true"}}
            </div>
            <div class="col-xs-2 col-sm-2 col-md-2  col-lg-2"></div>
          </div>

          <div class="text-center col-xs-12 col-sm-12 col-md-12  col-lg-12">
            <button  type="submit" class="btn btn-success modal-create-button" value="Create">Update</button>
          </div>

        </form>


      </div>
    </div>
  </div>
</div>
