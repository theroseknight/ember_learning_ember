<div class="modal" id="newroadtripModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">New roadtrip</h4>
      </div>
      <div class="modal-body">


        <form {{action "create"  on="submit"}} class="form-horizontal col-xs-12 col-sm-12 col-md-12  col-lg-12">

          <div class="form-group"><label class="control-label col-xs-3 col-sm-3 col-md-3  col-lg-3">Name</label>
            <div class="col-xs-7 col-sm-7 col-md-7  col-lg-7">
              {{input value=name type="text" id="name" class="form-control" required="true"}}
            </div>
            <div class="col-xs-2 col-sm-2 col-md-2  col-lg-2"></div>
          </div>

          <div class="form-group"><label class="control-label col-xs-3 col-sm-3 col-md-3  col-lg-3">Number of Days</label>
            <div class="col-xs-7 col-sm-7 col-md-7  col-lg-7">
              {{input value=numberOfDays type="text" id="number-of-days" class="form-control" required="true"}}
            </div>
            <div class="col-xs-2 col-sm-2 col-md-2  col-lg-2"></div>
          </div>

          <div class="form-group"><label class="control-label col-xs-3 col-sm-3 col-md-3  col-lg-3">Hours of Sleep</label>
            <div class="col-xs-7 col-sm-7 col-md-7  col-lg-7">
              {{input value=hoursOfSleep type="text" id="hours-of-sleep" class="form-control" required="true"}}
            </div>
            <div class="col-xs-2 col-sm-2 col-md-2  col-lg-2"></div>
          </div>

          <div class="form-group">
            <label class="control-label col-xs-3 col-sm-3 col-md-3 col-lg-3">Year of Vehicle</label>
            <div class="col-xs-7 col-sm-7 col-md-7 col-lg-7">
              {{select-menu-dropdown listOfItems=model.yearsAvailable currentSelection=model.defaultYear action="currentYearChanged"}}
            </div>
            <div class="col-xs-2 col-sm-2 col-md-2  col-lg-2"></div>
          </div>

          <div class="form-group default-hidden" id="car-make-group">
            <label class="control-label col-xs-3 col-sm-3 col-md-3 col-lg-3">Make of Vehicle</label>
            <div class="col-xs-7 col-sm-7 col-md-7 col-lg-7">
              {{select-menu-dropdown listOfItems=model.makesAvailable currentSelection=model.defaultMake action="currentMakeChanged"}}
            </div>
            <div class="col-xs-2 col-sm-2 col-md-2  col-lg-2"></div>
          </div>

          <div class="form-group default-hidden" id="car-model-group">
            <label class="control-label col-xs-3 col-sm-3 col-md-3 col-lg-3">Model of Vehicle</label>
            <div class="col-xs-7 col-sm-7 col-md-7 col-lg-7">
              {{select-menu-dropdown listOfItems=model.modelsAvailable currentSelection=model.defaultModel action="currentModelChanged"}}
            </div>
            <div class="col-xs-2 col-sm-2 col-md-2  col-lg-2"></div>
          </div>


          <div class="text-center col-xs-12 col-sm-12 col-md-12  col-lg-12">
            <button  type="submit" class="btn btn-success modal-create-button" value="Create">Create</button>
          </div>

        </form>


      </div>
    </div>
  </div>
</div>
