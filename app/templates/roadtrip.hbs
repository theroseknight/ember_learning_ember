<div class="row row-header">
  {{action-bar actionsArray=model.actionsArray transitionDestroy="/" id=model.id outerController=this idType="roadtrip"}}
</div>
<div class="row row-content">
  <div class="col-xs-2 leg-holder" id="left-landing-column">
    {{#each model.legs as |leg|}}
      <button class="leg-button" id="leg-button-{{leg.id}}" {{action "focusedLeg" leg.id}}>
        {{leg.endingCity}}
      </button>
    {{/each}}
  </div>
  {{outlet}}
</div>
